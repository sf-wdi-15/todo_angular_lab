<!DOCTYPE html>
<html>
<head>
  <title>TodoAngularLab</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="">
</head>
<body ng-app="TodoApp">
<div class="container">
  <div ng-controller="TodosCtrl">
    <h1>{{greeting}}</h1>

  <form ng-submit="addTodo()">
    <br>
    <div>
      <input type="text" ng-model="newTodo.content">
    </div>
    <br>
    <div>
      <button>Add Todo</button>
    </div>
  </form>
<!--     {{newTodo}} -->

    <div ng-repeat="todo in todos">
      <form ng-submit="removeTodo()">
        <div>
          <span class="complete{{todo.complete}}"><h3>{{todo.content}}<input type="checkbox" ng-model="newTodo.complete"></h3></span>
        </div>
      </form>
    </div>
  </div>

</div>

</body>
</html>
