<!-- TodoCtrl scope -->
<div ng-controller="TodoCtrl">

  <h1 class="page-header">Angular Lab</h1>

    <div class="row">
      <div class="col-lg-12">
          <!-- addTodo() form -->
          <form ng-submit="addTodo()">
              <div class="input-group">
                <!-- <div class="checkbox">
                  <label>
                  <input type="checkbox"
                         class="form-control" 
                         ng-model="newTodo.complete"
                         ng-true-value="true"
                         ng-false-value="false">
                  </label>
                </div> -->
                <input type="text"
                       class="form-control input-lg"
                       placeholder="New Todo..." 
                       ng-model="newTodo.content">
                <span class="input-group-btn">
                  <button class="btn btn-success btn-lg">Add Todo</button>
                </span>
              </div><!-- /input-group -->
          </form>
          <!-- /addTodo() form -->
      </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->
    
<hr>

    <!-- todos [] -->
    <div class="panel panel-primary">
      <div class="panel-heading"><h4>List of Todos</h4></div>
      <div class="panel-body">
        <ul class="list-group">
            <li ng-repeat="todo in todos" class="list-group-item">
              <span><input ng-model="todo.complete" type="checkbox"> {{todo.content}}</span>
            </li>
        </ul>
      </div>
    </div>
    <!-- /todos [] -->

</div>
<!-- /TodoCtrl scope -->